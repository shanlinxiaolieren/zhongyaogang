<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    >
    <RelativeLayout
        android:id="@+id/top_relativelayout_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#9A0000"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/wodezhongxin_left_address"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/btn_back_normal"
            />
        <TextView
            android:id="@+id/index_search_yaocaiwang_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新建收货人"
            android:textColor="@color/white"
            android:textSize="22sp" />
        <ImageView
            android:id="@+id/wodezhongxin_right_address"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/gongqiuright"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearlayout_shouhuoren"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/top_relativelayout_address"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="收货人："
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="请输入收货人姓名"
            android:layout_marginTop="5dp"
            android:textColorHint="#CDCDCD"
            android:background="@null"
            android:textSize="18sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BABABA" />
    <LinearLayout
        android:id="@+id/linearlayout_lianxifangshi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linearlayout_shouhuoren"

        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="联系方式："
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edittext_adresshaoma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="请输入收货人电话"
            android:layout_marginTop="5dp"
            android:textColorHint="#CDCDCD"
            android:background="@null"
            android:textSize="18sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BABABA" />
    <LinearLayout
        android:id="@+id/rl_select_arae"
        android:background="#ffffff"
        android:layout_below="@+id/linearlayout_lianxifangshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView

            android:padding="10dp"
            android:textSize="18sp"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区："
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <TextView
                android:clickable="true"
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/personel_arrow_right" />

        </RelativeLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BABABA" />
    <LinearLayout
        android:id="@+id/linearlayout_xiangxidizi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_select_arae"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="详细地址："
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/etAddressDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="街道、 楼牌号码等"
            android:layout_marginTop="5dp"
            android:textColorHint="#CDCDCD"
            android:background="@null"
            android:textSize="18sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BABABA" />

    <TextView
        android:id="@+id/rl_save_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#940000"
        android:clickable="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="保存"
        />



</RelativeLayout>
