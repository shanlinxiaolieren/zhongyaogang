<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
      <LinearLayout
        android:id="@+id/index_top_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="#9A0000"
        android:orientation="horizontal" >
       
        <TextView
            android:id="@+id/index_search_yaocaiwang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="东盟·大宗药材网"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>
    
       <com.zhongyaogang.widgets.CustomScrollView 
            android:id="@+id/customScrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_below="@id/index_top_layout"
        >
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
        android:id="@+id/index_top_layout_gonghuo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/index_search_gongqiu"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:text="供求"
            android:textColor="@color/black"
            android:textSize="22sp" />
        <!-- <TextView
            android:id="@+id/index_search_dangseng"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="党参"
            android:textColor="#B5B5B6"
            android:textSize="22sp" /> -->
            <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="7"
            >

            <EditText
                android:id="@+id/search_et_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/black"
                android:drawablePadding="5dp"
                android:hint="@string/index_search_edit_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/search_iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/btn_clear_input_selector"
                android:visibility="gone" />
        </FrameLayout>
          <ImageView
            android:id="@+id/index_search_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
             android:contentDescription="@string/app_name"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@mipmap/search" />
       </LinearLayout>
         <!-- 
            <ImageView 
                android:id="@+id/guanggaolunbo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                 android:contentDescription="@string/app_name"
                android:src="@drawable/ad5"
                />   -->
             <com.zhongyaogang.ab.view.AbSlidingPlayView
                android:id="@+id/viewPager_menu"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                 android:background="#00000000" 
                 android:layout_marginBottom="5dp"
              />
             <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/line" />
             <!-- 急需特供-->
            <LinearLayout 
                 android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="@color/qiangshe">
            <LinearLayout 
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
                >
                <TextView
            android:id="@+id/jixutegong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="急购特供"
            android:textColor="#6A3906"
            android:textSize="22sp" />
                </LinearLayout>

            <com.zhongyaogang.ab.view.MyGallery
                android:id="@+id/index_jingqiu_gallery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/index_gallery_height"
                android:layout_marginBottom="5dp"
                android:spacing="5dp" />
            
            </LinearLayout>
             <!-- 求购信息-->
             <LinearLayout
                android:id="@+id/index_quanbu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/qiugouxingxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    >
                     <ImageView 
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                     android:contentDescription="@string/app_name"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/qiugou"
                         />
                    <TextView
                        android:id="@+id/index_qiugouxingxi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="求购信息"
                        android:textColor="#595757"
                        android:textSize="22sp" />
                    </LinearLayout>
                    
                         
                         <TextView
                        android:id="@+id/quanbu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="全部 》"
                        android:layout_alignParentRight="true"
                      android:layout_marginRight="5dp"
                        android:textColor="#595757"
                        android:textSize="22sp" />
                    
                </RelativeLayout>
                 <View
                    android:layout_width="fill_parent"
                     android:layout_height="1dp"
                    android:background="@color/qianred" />
        <ListView
        android:id="@+id/listview_qiugouxingxi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:divider="@null" />
                 <!-- <include layout="@layout/qiugouxingxifenzi" />  -->
          
            </LinearLayout>
            <LinearLayout 
                 android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@color/qianghuangshe">
                 <LinearLayout 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_marginTop="10dp"
                     >
                <ImageView 
             android:layout_width="20dp"
            android:layout_height="30dp"
             android:contentDescription="@string/app_name"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/yuanchanggongying"
                    />
                     
                 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="原产供应"
            android:textColor="#595757"
            android:textSize="20sp" />
                 
                 </LinearLayout>
                 
      <include layout="@layout/yuanchanggongying_shangebutton" /> 
      
      <android.support.v4.view.ViewPager  
        android:id="@+id/id_page_vp"  
        android:layout_width="match_parent"  
        android:layout_height="0dp"  
        android:layout_weight="1" >  
    </android.support.v4.view.ViewPager>  
            </LinearLayout>
            
            </LinearLayout>
       </com.zhongyaogang.widgets.CustomScrollView>
</RelativeLayout>
