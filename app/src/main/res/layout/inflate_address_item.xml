<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/lladdress"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/tvConsigneeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="14sp"
                android:text="陈小龙" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:text="@string/shoujihaomaright" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/address"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkbox_morenadress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/check_moren_address"
                android:layout_alignParentLeft="true"
                android:button="@null"
                />
            <TextView
                android:id="@+id/textview_moren"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/checkbox_morenadress"
                android:layout_alignTop="@+id/checkbox_morenadress"
                android:text="@string/settingmoren"
                />
            <CheckBox
                android:id="@+id/cbEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:button="@null"
                android:padding="8dp"
                android:drawableLeft="@mipmap/xiugai"
                android:layout_toLeftOf="@+id/cbDel"
                />
            <CheckBox
                android:id="@+id/cbDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:button="@null"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/shanchu"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888888"/>
    </LinearLayout>
</LinearLayout>