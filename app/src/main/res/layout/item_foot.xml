<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/textview_yunfei_lishi"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"
            android:text="运费"
            android:textColor="#A9A9A9"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_fareprice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/textview_yunfei_lishi"
            android:layout_centerHorizontal="true"
            android:text="10.0"
            android:textColor="#A9A9A9"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textview_heji_lishi"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/textview_hejiprice_lishi"
            android:text="合计:"
            android:textColor="#A9A9A9"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textview_hejiprice_lishi"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:text="110.0"
            android:textColor="#CA7D7D"
            android:textSize="18sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        >
        <Button
            android:id="@+id/button_quxiao_order"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/button_fukuan_zhangsan"
            android:background="@drawable/shape_fukuan_button"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:text="取消订单"
            />
        <Button
            android:id="@+id/button_fukuan_zhangsan"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_button"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</LinearLayout>
