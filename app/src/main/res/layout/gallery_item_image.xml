<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/hundredandtwenty"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/index_gallery_item_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/hundred"
         android:contentDescription="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@mipmap/yaocai1"
        android:layout_margin="@dimen/martop"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/index_gallery_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/index_gallery_item_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/martop"
        android:textColor="@color/red"
        android:textSize="@dimen/micro_text_size" />
    <TextView
        android:id="@+id/index_gallery_item_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/index_gallery_item_text"
        android:layout_centerHorizontal="true"
        android:textColor="@color/red"
        android:textSize="@dimen/micro_text_size" />

</RelativeLayout>
