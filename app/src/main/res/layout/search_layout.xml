<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sixtyfive"
    android:orientation="vertical" >
         <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:layout_marginTop="@dimen/martop"
                android:background="@drawable/line" />
    <LinearLayout 
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        >
         <View
                android:layout_width="@dimen/one"
                android:layout_height="match_parent"
                android:background="@drawable/line" />
     <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_weight="7"
            >

            <EditText
                android:id="@+id/search_et_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/black"
                android:drawablePadding="@dimen/martop"
                android:hint="@string/index_search_edit_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/l_text_size" />

            <ImageView
                android:id="@+id/search_iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:contentDescription="@string/app_name"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/twenty"
                android:src="@drawable/btn_clear_input_selector"
                android:visibility="gone" />
        </FrameLayout>
        <ImageView
            android:id="@+id/index_search_button"
            android:layout_width="@dimen/forty"
                android:layout_height="@dimen/thirty"
                android:layout_weight="1"
                 android:contentDescription="@string/app_name"
                 android:layout_gravity="right|center_vertical"
                android:src="@mipmap/search"/>
          <View
                android:layout_width="@dimen/one"
                android:layout_height="match_parent"
                android:background="@drawable/line" />
    </LinearLayout>
     <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@drawable/line" />
</LinearLayout>
