<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/top_relativelayout_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:gravity="center_vertical"
        android:background="#9A0000"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/wodezhongxin_left_address"
            android:layout_width="@dimen/twentyfive"
            android:layout_height="@dimen/thirty"
            android:contentDescription="@string/app_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/martopten"
            android:layout_marginTop="@dimen/martopten"
            android:layout_marginBottom="@dimen/martopten"
            android:src="@mipmap/btn_back_normal"
            />
        <TextView
            android:id="@+id/index_search_yaocaiwang_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="管理收货地址"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />
        <ImageView
            android:id="@+id/wodezhongxin_right_address"
            android:layout_width="@dimen/twentyfive"
            android:layout_height="@dimen/thirty"
            android:contentDescription="@string/app_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/martopten"
            android:layout_marginTop="@dimen/martopten"
            android:layout_marginBottom="@dimen/martopten"
            android:src="@mipmap/gongqiuright"
            />


    </RelativeLayout>
    <ListView
        android:id="@+id/lvAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1"
        android:dividerHeight="@dimen/eight" />
    <Button
        android:id="@+id/button_addressadd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty"
        android:background="#940000"
        android:textColor="@color/white"
        android:text="+ 添加新地址"
        />
</LinearLayout>
