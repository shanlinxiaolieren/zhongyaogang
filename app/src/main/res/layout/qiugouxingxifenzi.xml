<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
                 <LinearLayout 
                    android:id="@+id/jixutegong_diyi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                     android:gravity="center"
                    >
            <TextView
            android:id="@+id/jixutegong_yaopeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三七"
            android:layout_weight="1"
            android:textColor="#6A3906"
            android:textSize="18sp" />
            <TextView
            android:id="@+id/jixutegong_huo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="药厂投料货"
            android:layout_weight="2"
            android:textColor="#6A3906"
            android:textSize="18sp" />
             <LinearLayout 
                    android:id="@+id/jixutegong_qiugounumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    >
           <!--  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求购"
            android:textColor="#E4B8B8"
            android:textSize="18sp" /> -->
            <TextView
            android:id="@+id/jixutegong_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="#E4B8B8"
            android:textSize="18sp" />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公斤"
            android:textColor="#E4B8B8"
            android:textSize="18sp" />
              </LinearLayout>
            <TextView
            android:id="@+id/jixutegong_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:text="查看更多"
            android:layout_weight="2"
            android:textColor="#6A3906"
            android:textSize="18sp" />
                </LinearLayout>
                 <View
                    android:layout_width="fill_parent"
                     android:layout_height="1dp"
                    android:background="@color/qianred" />
</LinearLayout>
