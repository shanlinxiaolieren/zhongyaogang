<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/top_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:gravity="center_vertical"
        android:background="#9A0000"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/wodezhongxin_left"
            android:layout_width="@dimen/twentyfive"
            android:layout_height="@dimen/thirty"
            android:contentDescription="@string/app_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/martopten"
            android:layout_marginTop="@dimen/martopten"
            android:layout_marginBottom="@dimen/martopten"
            android:src="@mipmap/btn_back_normal"
            />
        <TextView
            android:id="@+id/index_search_yaocaiwang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/xiugaimima"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />
        <TextView
            android:id="@+id/wodezhongxin_right"
            android:layout_width="@dimen/forty_five"
            android:layout_height="@dimen/thirty"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/martopten"
            android:layout_marginTop="@dimen/martopten"
            android:layout_marginBottom="@dimen/martopten"
            android:clickable="true"
            android:textSize="@dimen/l_text_size"
            android:text="@string/wancheng"
            android:textColor="@color/white" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/martop"
        android:layout_height="@dimen/fifty"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:text="@string/yuanshimima"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginTop="@dimen/martop"
            android:layout_marginLeft="@dimen/eight"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edittext_mima"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/qingshuruyuanshimima"
            android:layout_marginTop="@dimen/martop"
            android:textColorHint="#CDCDCD"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@null"
            android:textSize="@dimen/medium_text_size"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="#BABABA" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"

        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:text="@string/xinmima"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginTop="@dimen/martop"
            android:layout_marginLeft="@dimen/eight"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edittext_xinmima"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/qingshuruxinshimima"
            android:layout_marginTop="@dimen/martop"
            android:textColorHint="#CDCDCD"
            android:inputType="textPassword"
            android:background="@null"
            android:textSize="@dimen/small_text_size"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="#BABABA" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"

        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:text="@string/zaicixinshimima"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginTop="@dimen/martop"
            android:layout_marginLeft="@dimen/eight"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edittext_zaixinmima"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/zaicishurushimima"
            android:layout_marginTop="@dimen/martop"
            android:textColorHint="#CDCDCD"
            android:inputType="textPassword"
            android:background="@null"
            android:textSize="@dimen/medium_text_size"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="#BABABA" />
</LinearLayout>
