<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/index_top_relativelayout" />
    <LinearLayout
        android:id="@+id/id_switch_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical" >
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
        <LinearLayout
            android:id="@+id/id_tab_chat_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textview_quanbu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:clickable="true"
                android:text="全部"
                android:textColor="#FF6144"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />


            <TextView
                android:id="@+id/textview_daifukuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="待付款"
                android:textColor="@color/darkgray"
                android:textSize="20sp" />


            <View
                android:layout_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/textview_daifahuo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="待发货"
                android:textColor="@color/darkgray"
                android:textSize="20sp" />
            <View
                android:layout_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/textview_daishouhuo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="待收货"
                android:textColor="@color/darkgray"
                android:textSize="20sp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/show_cart_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </RelativeLayout>
        <!--  <ImageView
          android:id="@+id/id_tab_line_iv"
          android:layout_width="200dp"
          android:layout_height="3dp"
          android:contentDescription="@string/app_name"
          android:background="@color/red"
          android:contentDescription="tab" >
      </ImageView> -->

        <android.support.v4.view.ViewPager
            android:id="@+id/id_page_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>


</LinearLayout>
