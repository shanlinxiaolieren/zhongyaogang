<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/index_top_relativelayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textview_gong"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="供"
            android:background="#3BCDF0"/>
        <TextView
            android:id="@+id/textview_qiu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="求"
            android:background="#CCCECD"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/show_cart_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </RelativeLayout>
    <!-- <ImageView
       android:id="@+id/id_tab_line_iv"
       android:layout_width="200dp"
       android:layout_height="1dp"
        android:contentDescription="@string/app_name"
       android:background="@color/white"
        >
   </ImageView> -->
    <android.support.v4.view.ViewPager
        android:id="@+id/id_page_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>
</LinearLayout>
