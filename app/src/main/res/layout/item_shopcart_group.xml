<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        />
        <ImageView
            android:id="@+id/ivicon"
            android:layout_width="@dimen/eighty"
            android:layout_height="@dimen/eighty"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="@dimen/martop"
            android:layout_marginLeft="@dimen/martop"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirteen" >
            <TextView
                android:id="@+id/tv_intro"
                android:layout_marginTop="@dimen/martopten"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/thirty"
                android:text="测试数据"
                android:textColor="#545454"
                android:textSize="@dimen/l_text_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/textview_guige"
                android:layout_marginTop="@dimen/martopten"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/thirty"
                android:text="18*20cm"
                android:textColor="#A6A6A6"
                android:layout_centerInParent="true"
                android:layout_below="@+id/tv_intro"
                />
            <TextView
                android:id="@+id/textview_date"
                android:layout_width="@dimen/hundred"
                android:layout_height="@dimen/twenty"
                android:textColor="#A6A6A6"
                android:text="2016.02.18"
                android:layout_centerInParent="true"
                android:layout_below="@+id/textview_guige"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/thirty"
                android:layout_marginTop="@dimen/martopten"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/martopten"
                android:text="308.00"
                android:textSize="@dimen/l_text_size"
                android:textStyle="bold"
                android:textColor="#EB5363"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fifty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginRight="@dimen/martopten"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tv_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/martop"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/shopcar_item_sub" />
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/martopten"
                    android:text="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/small_text_size" />
                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/twentyfive"
                    android:clickable="true"
                    android:layout_marginRight="@dimen/martop"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/shopcar_item_sum" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/forty"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tvpay"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="#e0e0e0" />


</LinearLayout>
