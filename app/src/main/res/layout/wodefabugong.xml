<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_user_members_gong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        
             <ImageView
                      android:id="@+id/imageView1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                         android:contentDescription="@string/app_name"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/yaocai1" />
        <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="100dp">

                    <TextView
                        android:id="@+id/merchandiseName"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="三七/田七"
                        android:textColor="#4C4A4B" />

                    <TextView
                        android:id="@+id/textview_gong_price"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignLeft="@+id/merchandiseName"
                        android:layout_below="@+id/merchandiseName"
                         android:text="¥"
                         android:textColor="#000000"
                         android:textSize="22sp"
                        />
                    <TextView
                        android:id="@+id/gong_price"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/merchandiseName"
                        android:layout_toRightOf="@+id/textview_gong_price"
                         android:text="100.00"
                         android:textColor="#000000"
                         android:textSize="22sp"
                        />
                   
    </RelativeLayout>
             
              <TextView
                         android:id="@+id/textview_edit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                         android:contentDescription="@string/app_name"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@mipmap/personel_arrow_right"
                        android:layout_weight="1"
                         />
                    <LinearLayout 
                        android:id="@+id/linearlayout"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:background="#EFEFEF"
                        android:layout_weight="2"
                        >
                         <TextView 
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="销量23"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#595757"
                            android:textSize="20sp"
                            />
                        <TextView 
                            android:id="@+id/gong_delete"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:text="删除"
                            android:textSize="18sp"
                            android:textColor="#C30D23"
                            />
                    </LinearLayout>
                    
    </LinearLayout>
    
                  <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BABABA" />

</LinearLayout>
