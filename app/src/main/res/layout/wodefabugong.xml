<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_user_members_gong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred"
        android:orientation="horizontal"
        >
        
             <ImageView
                      android:id="@+id/imageView1"
                        android:layout_width="@dimen/zero"
                        android:layout_height="@dimen/eighty"
                         android:contentDescription="@string/app_name"
                        android:layout_marginLeft="@dimen/martopten"
                        android:layout_weight="2"
                        android:layout_marginTop="@dimen/martop"
                        android:src="@mipmap/yaocai1" />
        <RelativeLayout 
        android:layout_width="@dimen/zero"
        android:layout_weight="2"
        android:layout_height="@dimen/hundred">

                    <TextView
                        android:id="@+id/merchandiseName"
                        android:layout_width="@dimen/eighty"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/martopten"
                        android:layout_marginTop="@dimen/martopten"
                        android:text="三七/田七"
                        android:textColor="#4C4A4B" />

                    <TextView
                        android:id="@+id/textview_gong_price"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/thirty"
                        android:layout_marginTop="@dimen/martop"
                        android:layout_alignLeft="@+id/merchandiseName"
                        android:layout_below="@+id/merchandiseName"
                         android:text="¥"
                         android:textColor="#000000"
                         android:textSize="@dimen/large_text_size"
                        />
                    <TextView
                        android:id="@+id/gong_price"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/thirty"
                        android:layout_marginTop="@dimen/martop"
                        android:layout_below="@+id/merchandiseName"
                        android:layout_toRightOf="@+id/textview_gong_price"
                         android:text="100.00"
                         android:textColor="#000000"
                         android:textSize="@dimen/large_text_size"
                        />
                   
    </RelativeLayout>
             
              <TextView
                         android:id="@+id/textview_edit"
                        android:layout_width="@dimen/zero"
                        android:layout_height="@dimen/forty"
                        android:clickable="true"
                         android:contentDescription="@string/app_name"
                        android:layout_marginTop="@dimen/thirty"
                        android:layout_marginRight="@dimen/martopten"
                        android:drawableRight="@mipmap/personel_arrow_right"
                        android:layout_weight="1"
                         />
                    <LinearLayout 
                        android:id="@+id/linearlayout"
                        android:layout_width="@dimen/zero"
                        android:layout_height="@dimen/hundred"
                        android:orientation="vertical"
                        android:background="#EFEFEF"
                        android:layout_weight="2"
                        >
                         <TextView 
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/thirty"
                            android:text="销量23"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_marginTop="@dimen/martopten"
                            android:textColor="#595757"
                            android:textSize="@dimen/l_text_size"
                            />
                        <TextView 
                            android:id="@+id/gong_delete"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/thirty"
                            android:layout_marginLeft="@dimen/thirty"
                            android:layout_marginTop="@dimen/twenty"
                            android:text="删除"
                            android:textSize="@dimen/medium_text_size"
                            android:textColor="#C30D23"
                            />
                    </LinearLayout>
                    
    </LinearLayout>
    
                  <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one"
                        android:background="#BABABA" />

</LinearLayout>
